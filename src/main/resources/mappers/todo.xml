<!-- *****************************************************************************************************************  -->

	<update id="updateTodoComplete" parameterType="Integer">
		UPDATE
			todo_mst
		SET
			todo_complete = CASE WHEN todo_complete = 0 THEN 1 ELSE 0 END
		WHERE
			todo_code = #{todo_code}
	</update>
	
<!-- *****************************************************************************************************************  -->

	<update id="updateTodoImportance" parameterType="Integer">
		UPDATE
			todo_mst
		SET
			importance_flag = CASE WHEN importance_flag = 0 THEN 1 ELSE 0 END
		WHERE
			todo_code = #{todo_code}
	</update>
	
<!-- *****************************************************************************************************************  -->

	<update id="updateTodoByTodoCode" parameterType="com.bosung.todolist.domain.todo.Todo">
		update
			todo_mst
		set
			todo_content = #{todo_content},
			
			update_date = now()
		where
			todo_code = #{todo_code}
	</update>
	
<!-- *****************************************************************************************************************  -->

	<delete id="remove" parameterType="Integer">
		delete
		from
			todo_mst
		where
			todo_code = #{todo_code}
	</delete>
	
</mapper>



















